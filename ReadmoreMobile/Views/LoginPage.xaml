<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReadmoreMobile.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">

    <Grid ColumnDefinitions="*,520,*" RowDefinitions="Auto,*">
        <VerticalStackLayout Grid.Column="1" Spacing="12" VerticalOptions="Start">

            <VerticalStackLayout Spacing="2">
                <Label Text="ReadMore" Style="{StaticResource TitleLabel}" />
                <Label Text="Sign in to continue" Style="{StaticResource SubtitleLabel}" />
            </VerticalStackLayout>

            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="12">

                    <Frame Style="{StaticResource InputFrame}">
                        <Entry Style="{StaticResource InputEntry}"
                               Placeholder="Email"
                               Text="{Binding Email}" />
                    </Frame>

                    <Frame Style="{StaticResource InputFrame}">
                        <Entry Style="{StaticResource InputEntry}"
                               Placeholder="Password"
                               IsPassword="True"
                               Text="{Binding Password}" />
                    </Frame>

                    <Label Text="{Binding ErrorMessage}"
                           IsVisible="{Binding HasError}"
                           Style="{StaticResource DangerLabel}" />

                    <Button Text="Login"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding LoginCommand}" />

                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       IsVisible="{Binding IsBusy}"
                                       HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
