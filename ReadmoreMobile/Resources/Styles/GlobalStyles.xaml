<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="AppBg">#0B1220</Color>
    <Color x:Key="CardBg">#111A2E</Color>
    <Color x:Key="Primary">#4F8CFF</Color>
    <Color x:Key="Text">#E6EAF2</Color>
    <Color x:Key="TextMuted">#AAB3C5</Color>
    <Color x:Key="Danger">#FF5A5F</Color>

    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource AppBg}" />
        <Setter Property="Padding" Value="18" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Text}" />
    </Style>

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Text}" />
    </Style>

    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
    </Style>

    <Style x:Key="DangerLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Danger}" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="46" />
    </Style>

    <Style x:Key="CardFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Padding" Value="18" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <Style x:Key="InputFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="InputEntry" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource Text}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

</ResourceDictionary>
