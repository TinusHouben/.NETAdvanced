@model ReadmoreWeb.Models.Cart.CartViewModel

@{
    ViewData["Title"] = "Winkelmand";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 mb-0">Winkelmand</h1>
            <div class="text-muted small">@Model.Count items</div>
        </div>

        <form asp-controller="Cart" asp-action="Clear" method="post">
            <button class="btn btn-outline-danger" type="submit">Leegmaken</button>
        </form>
    </div>

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info">Je winkelmand is leeg.</div>
        <a class="btn btn-primary" asp-controller="Books" asp-action="Index">Naar boeken</a>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Boek</th>
                            <th style="width:160px;">Aantal</th>
                            <th style="width:140px;">Prijs</th>
                            <th class="text-end" style="width:120px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@item.Title</div>
                                    <div class="text-muted small">@item.Author</div>
                                </td>
                                <td>
                                    <form asp-controller="Cart" asp-action="Update" method="post" class="d-flex gap-2">
                                        <input type="hidden" name="bookId" value="@item.BookId" />
                                        <input class="form-control" type="number" name="quantity" min="0" value="@item.Quantity" />
                                        <button class="btn btn-outline-primary" type="submit">OK</button>
                                    </form>
                                </td>
                                <td>@((item.Price * item.Quantity).ToString("0.00"))</td>
                                <td class="text-end">
                                    <form asp-controller="Cart" asp-action="Remove" method="post">
                                        <input type="hidden" name="bookId" value="@item.BookId" />
                                        <button class="btn btn-outline-danger btn-sm" type="submit">Verwijder</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="2" class="text-end fw-semibold">Totaal</td>
                            <td class="fw-semibold">@Model.Total.ToString("0.00")</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Books" asp-action="Index">Verder winkelen</a>
            <a class="btn btn-primary" asp-controller="Orders" asp-action="Checkout">Afrekenen</a>
        </div>
    }
</div>
