@model ReadmoreWeb.Data.Models.ContactMessage
@{
    ViewData["Title"] = "Contactdetails";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-9">

        <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
            <div>
                <h2 class="mb-1">Contactbericht #@Model.Id</h2>
                <div class="text-muted">@Model.CreatedAt • @Model.Email</div>
            </div>

            <div>
                @if (Model.Status == "Resolved")
                {
                    <span class="badge bg-success fs-6">Resolved</span>
                }
                else if (Model.Status == "InProgress")
                {
                    <span class="badge bg-warning text-dark fs-6">InProgress</span>
                }
                else
                {
                    <span class="badge bg-danger fs-6">New</span>
                }
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <div class="text-muted small mb-1">Onderwerp</div>
                <div class="fw-semibold">@Model.Subject</div>
                <hr />
                <div class="text-muted small mb-1">Origineel bericht</div>
                <div style="white-space: pre-line">@Model.Message</div>
            </div>
        </div>

        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <h5 class="mb-3">Chat</h5>

                @if (Model.Replies == null || Model.Replies.Count == 0)
                {
                    <div class="text-muted">Nog geen antwoorden.</div>
                }
                else
                {
                    foreach (var r in Model.Replies.OrderBy(r => r.CreatedAt))
                    {
                        var isAdmin = r.Sender == "Admin";
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <div class="fw-semibold">
                                    @(isAdmin ? "Admin" : "User")
                                </div>
                                <div class="text-muted small">@r.CreatedAt</div>
                            </div>
                            <div class="p-3 rounded border @(isAdmin ? "" : "bg-light")" style="white-space: pre-line">
                                @r.Text
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        @if (Model.Status != "Resolved")
        {
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">
                    <form asp-action="Reply" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <label class="form-label fw-semibold">Antwoord (Admin)</label>
                        <textarea name="text" class="form-control mb-2" rows="4" placeholder="Typ je antwoord..."></textarea>

                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-send"></i> Verstuur
                        </button>
                    </form>
                </div>
            </div>
        }

        <form asp-action="SetStatus" method="post" class="card p-3 mb-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <label class="form-label fw-semibold">Status aanpassen</label>
            <div class="row g-2">
                <div class="col-md-6">
                    <select class="form-select" name="status">
                        <option value="New" selected="@(Model.Status == "New" ? "selected" : null)">New</option>
                        <option value="InProgress" selected="@(Model.Status == "InProgress" ? "selected" : null)">InProgress</option>
                        <option value="Resolved" selected="@(Model.Status == "Resolved" ? "selected" : null)">Resolved</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-primary w-100" type="submit">Opslaan</button>
                </div>
            </div>
        </form>

        <form asp-action="Delete" method="post" class="d-flex gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <a class="btn btn-outline-secondary" asp-action="Index">Terug</a>

            <button class="btn btn-danger" type="submit">
                <i class="bi bi-trash"></i> Verwijderen
            </button>
        </form>

    </div>
</div>
