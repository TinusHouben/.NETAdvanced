@{
    ViewData["Title"] = "ReadMore Books";
}

<div class="container mt-5">
    <!-- Hero sectie -->
    <div class="bg-light text-center p-5 rounded shadow-sm">
        <h1 class="display-4 mb-3">Welkom bij ReadMore Books!</h1>
        <p class="lead mb-4">Ontdek, koop en beheer je favoriete boeken eenvoudig online.</p>
        <a class="btn btn-primary btn-lg" asp-controller="Books" asp-action="Index">Bekijk onze boeken</a>
    </div>

    <!-- Info sectie -->
    <div class="row mt-5 text-center">
        <div class="col-md-4 mb-4">
            <i class="bi bi-book-fill fs-1 mb-3"></i>
            <h3>Grootste collectie</h3>
            <p>Van romans tot studieboeken, wij hebben alles wat je zoekt.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-truck fs-1 mb-3"></i>
            <h3>Snelle levering</h3>
            <p>Bestel online en ontvang je boeken snel thuis.</p>
        </div>
        <div class="col-md-4 mb-4">
            <i class="bi bi-people-fill fs-1 mb-3"></i>
            <h3>Klantenservice</h3>
            <p>Altijd beschikbaar om je vragen te beantwoorden.</p>
        </div>
    </div>
</div>
