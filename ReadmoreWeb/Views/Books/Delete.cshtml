@model ReadmoreWeb.Data.Models.Book

@{
    ViewData["Title"] = "Boek verwijderen";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-9">

        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">

                <div class="d-flex align-items-center gap-2 mb-3">
                    <span class="badge bg-danger fs-6">
                        <i class="bi bi-exclamation-triangle"></i>
                        Verwijderen
                    </span>
                    <h2 class="mb-0">Ben je zeker?</h2>
                </div>

                <p class="text-muted mb-4">
                    Je staat op het punt dit boek te verwijderen. Deze actie kan niet ongedaan gemaakt worden.
                </p>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Titel</div>
                            <div class="fw-semibold">@Model.Title</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Auteur</div>
                            <div class="fw-semibold">@Model.Author</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Prijs</div>
                            <div class="fw-semibold">€ @Model.Price</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Publicatiedatum</div>
                            <div class="fw-semibold">@Model.PublishedDate.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Beschrijving</div>
                            <div class="fw-semibold" style="white-space: pre-line">
                                @Model.Description
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Verwijder definitief
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i>
                        Annuleren
                    </a>
                </form>

            </div>
        </div>

    </div>
</div>
