@model ReadmoreWeb.Data.Models.Book
@{
    ViewData["Title"] = "Boekdetails";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-9">

        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">

                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-start gap-3 mb-3">
                    <div>
                        <h2 class="mb-1">@Model.Title</h2>

                        <div class="text-muted mb-2">
                            <i class="bi bi-person"></i>
                            <span class="ms-1">@Model.Author</span>
                        </div>

                        <div class="d-flex gap-2 flex-wrap">
                            <span class="badge bg-primary fs-6">
                                <i class="bi bi-tag"></i>
                                € @Model.Price
                            </span>

                            <span class="badge bg-light text-dark border fs-6">
                                <i class="bi bi-calendar3"></i>
                                @Model.PublishedDate.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="text-md-end">
                        <div class="display-6 fw-semibold mb-2">
                            € @Model.Price
                        </div>

                        <div class="d-flex justify-content-md-end gap-2">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="bi bi-arrow-left"></i> Terug
                            </a>

                            <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@Model.Id" />
                                <button class="btn btn-success">
                                    <i class="bi bi-cart-plus"></i> In winkelmand
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Titel</div>
                            <div class="fw-semibold">@Model.Title</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Auteur</div>
                            <div class="fw-semibold">@Model.Author</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Prijs</div>
                            <div class="fw-semibold">€ @Model.Price</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 border rounded bg-light">
                            <div class="text-muted small">Publicatiedatum</div>
                            <div class="fw-semibold">
                                @Model.PublishedDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <h5>Beschrijving</h5>

                    <p class="text-muted" style="white-space: pre-line">
                        @Model.Description
                    </p>
                </div>

            </div>
        </div>

    </div>
</div>
