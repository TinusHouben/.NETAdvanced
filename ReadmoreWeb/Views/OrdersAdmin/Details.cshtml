@model ReadmoreWeb.Data.Models.Order

@{
    var allowedStatuses = (List<string>)(ViewBag.AllowedStatuses ?? new List<string> { "Pending", "Completed", "Cancelled" });
    var returnUrl = ViewBag.ReturnUrl as string;

    var fullName = (Model.User?.FirstName + " " + Model.User?.LastName).Trim();
    var street = Model.User?.Street ?? "";
    var city = Model.User?.City ?? "";
    var postal = Model.User?.PostalCode ?? "";
    var address = (street + ", " + postal + " " + city).Trim().Trim(',');
}

<h2>Bestelling @Model.Id</h2>

<div class="card p-3 mb-3">
    <p><b>Klant:</b> @(string.IsNullOrWhiteSpace(fullName) ? "-" : fullName)</p>
    <p><b>Email:</b> @(Model.User?.Email ?? "-")</p>
    <p><b>Adres:</b> @(string.IsNullOrWhiteSpace(address) ? "-" : address)</p>
    <p><b>Status:</b> @Model.Status</p>
    <p><b>Datum:</b> @Model.CreatedAt</p>
    <p><b>Totaal:</b> @Model.TotalAmount</p>
</div>

@if (Model.Status != "Completed")
{
    <form asp-action="MarkCompleted" method="post" class="mb-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="returnUrl" value="@returnUrl" />
        <button class="btn btn-success" type="submit">Markeer als afgerond</button>
    </form>
}
else
{
    <div class="alert alert-success mb-3">
        Deze bestelling is afgerond.
    </div>
}

<form asp-action="UpdateStatus" method="post" class="card p-3 mb-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="returnUrl" value="@returnUrl" />

    <label class="form-label"><b>Status aanpassen</b></label>
    <div class="row g-2">
        <div class="col-md-6">
            <select class="form-select" name="status">
                @foreach (var s in allowedStatuses)
                {
                    <option value="@s" selected="@(Model.Status == s ? "selected" : null)">@s</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary w-100" type="submit">Opslaan</button>
        </div>
    </div>
</form>

<h4>Items</h4>

<table class="table">
    <thead>
        <tr>
            <th>Boek</th>
            <th>Aantal</th>
            <th>Unit</th>
            <th>Subtotaal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Items)
        {
            var title = i.Book?.Title ?? "-";
            var subtotal = i.UnitPrice * i.Quantity;

            <tr>
                <td>@title</td>
                <td>@i.Quantity</td>
                <td>@i.UnitPrice</td>
                <td>@subtotal</td>
            </tr>
        }
    </tbody>
</table>

@if (!string.IsNullOrWhiteSpace(returnUrl))
{
    <a class="btn btn-outline-secondary" href="@returnUrl">Terug</a>
}
else
{
    <a class="btn btn-outline-secondary" asp-action="Index">Terug</a>
}
