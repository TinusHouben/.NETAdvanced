@model List<ReadmoreWeb.Data.Models.Order>

<h2>Bestellingsbeheer</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-5">
        <input class="form-control" name="q" value="@ViewBag.Q" placeholder="Zoek op email/naam/status" />
    </div>

    <div class="col-md-3">
        <select class="form-select" name="status">
            <option value="All" selected="@(ViewBag.Status == "All" ? "selected" : null)">Alle statussen</option>
            <option value="Pending" selected="@(ViewBag.Status == "Pending" ? "selected" : null)">Pending</option>
            <option value="Completed" selected="@(ViewBag.Status == "Completed" ? "selected" : null)">Completed</option>
            <option value="Cancelled" selected="@(ViewBag.Status == "Cancelled" ? "selected" : null)">Cancelled</option>
        </select>
    </div>

    <div class="col-md-2">
        <select class="form-select" name="sort">
            <option value="new" selected="@(ViewBag.Sort == "new" ? "selected" : null)">Nieuwste eerst</option>
            <option value="old" selected="@(ViewBag.Sort == "old" ? "selected" : null)">Oudste eerst</option>
        </select>
    </div>

    <div class="col-md-2">
        <button class="btn btn-primary w-100" type="submit">Filter</button>
    </div>
</form>

<table class="table table-sm align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Klant</th>
            <th>Email</th>
            <th>Adres</th>
            <th>Status</th>
            <th>Datum</th>
            <th>Totaal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            var fullName = (o.User?.FirstName + " " + o.User?.LastName).Trim();

            var street = o.User?.Street ?? "";
            var city = o.User?.City ?? "";
            var postal = o.User?.PostalCode ?? "";
            var address = (street + ", " + postal + " " + city).Trim().Trim(',');

            <tr>
                <td>@o.Id</td>
                <td>@(string.IsNullOrWhiteSpace(fullName) ? "-" : fullName)</td>
                <td>@(o.User?.Email ?? "-")</td>
                <td>@(string.IsNullOrWhiteSpace(address) ? "-" : address)</td>
                <td>
                    @if (o.Status == "Completed")
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else if (o.Status == "Cancelled")
                    {
                        <span class="badge bg-danger">Cancelled</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                </td>
                <td>@o.CreatedAt</td>
                <td>@o.TotalAmount</td>
                <td>
                    <a class="btn btn-sm btn-secondary"
                       asp-action="Details"
                       asp-route-id="@o.Id"
                       asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
