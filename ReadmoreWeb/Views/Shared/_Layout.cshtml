@using ReadmoreWeb.Services.Orders
@using ReadmoreWeb.Services.Contact
@using System.Security.Claims
@inject IOrderAdminService OrderAdminService
@inject IContactAdminService ContactAdminService
@inject IContactBadgeService ContactBadgeService

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReadmoreWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReadmoreWeb.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    ReadMore Books
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var userId = User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "";
                            var userUnread = string.IsNullOrWhiteSpace(userId)
                            ? 0
                            : await ContactBadgeService.GetUserUnreadCountAsync(userId);

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Books" asp-action="Index">Books</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Orders" asp-action="My">Mijn bestellingen</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center gap-1"
                                   asp-controller="Contact"
                                   asp-action="My">
                                    Contact
                                    @if (userUnread > 0)
                                    {
                                        <span class="badge bg-danger">@userUnread</span>
                                    }
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                var pendingOrders = await OrderAdminService.GetPendingCountAsync();
                                var newTickets = await ContactAdminService.GetNewCountAsync();
                                var adminUnread = await ContactBadgeService.GetAdminUnreadCountAsync();
                                var contactAdminBadge = newTickets + adminUnread;

                                <li class="nav-item">
                                    <a class="nav-link text-dark d-flex align-items-center gap-1"
                                       asp-controller="OrdersAdmin"
                                       asp-action="Index">
                                        Bestellingsbeheer
                                        @if (pendingOrders > 0)
                                        {
                                            <span class="badge bg-danger">@pendingOrders</span>
                                        }
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark d-flex align-items-center gap-1"
                                       asp-controller="ContactAdmin"
                                       asp-action="Index">
                                        Contactbeheer
                                        @if (contactAdminBadge > 0)
                                        {
                                            <span class="badge bg-danger">@contactAdminBadge</span>
                                        }
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">
                                        Gebruikers
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link text-dark position-relative"
                                   asp-controller="Cart"
                                   asp-action="Index"
                                   title="Winkelmand">
                                    <i class="bi bi-cart3 fs-5"></i>
                                </a>
                            </li>

                            <li class="nav-item me-2">
                                <a class="nav-link text-dark"
                                   asp-controller="Profile"
                                   asp-action="Index"
                                   title="Profiel">
                                    <i class="bi bi-person-circle fs-5"></i>
                                </a>
                            </li>

                            <li class="nav-item me-3 d-none d-sm-block">
                                <span class="navbar-text text-muted small">
                                    @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info mt-2">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-2">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success mt-2">@TempData["Success"]</div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            &copy; 2025 - ReadMore Books
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
