@model ReadmoreWeb.Data.Models.ContactMessage
@{
    ViewData["Title"] = "Contact";
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
                <h2 class="mb-1">Contact</h2>
                <p class="text-muted mb-4">Stuur ons een bericht. Je e-mail wordt automatisch gebruikt.</p>

                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Subject" class="form-label">Onderwerp</label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Telefoon (optioneel)</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Message" class="form-label">Bericht</label>
                        <textarea asp-for="Message" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-send"></i> Verzenden
                        </button>
                        <a class="btn btn-outline-secondary" asp-action="My">
                            Mijn contactberichten
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
