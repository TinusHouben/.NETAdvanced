@model List<ReadmoreWeb.Data.Models.ApplicationUser>

<h2>Gebruikers</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Naam</th>
            <th>Geblokkeerd</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            var locked = u.LockoutEnd.HasValue && u.LockoutEnd.Value > DateTimeOffset.UtcNow;
            <tr>
                <td>@u.Email</td>
                <td>@u.UserName</td>
                <td>@(locked ? "Ja" : "Nee")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@u.Id">Beheer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
