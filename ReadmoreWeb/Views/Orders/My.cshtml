@model IEnumerable<ReadmoreWeb.Data.Models.Order>

<h2>Mijn bestellingen</h2>

@if (!Model.Any())
{
    <p>Je hebt nog geen bestellingen.</p>
}
else
{
    foreach (var order in Model)
    {
        var status = order.Status == "Created" ? "Pending" : order.Status;

        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <strong>Bestelling:</strong> @order.Id<br />
                        <strong>Datum:</strong> @order.CreatedAt
                    </div>
                    <div>
                        @if (status == "Completed")
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else if (status == "Cancelled")
                        {
                            <span class="badge bg-danger">Cancelled</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </div>
                </div>

                <ul class="mb-0">
                    @foreach (var item in order.Items)
                    {
                        <li>
                            @item.Book?.Title – @item.Quantity × @item.UnitPrice
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
}
